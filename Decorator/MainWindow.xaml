<Window x:Class="Decorator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Decorator"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Text="Ваш заказ:" />
            <TextBlock x:Name="DescriptionText" FontSize="16" Text="" Margin="0,0,0,20"/>
            <TextBlock x:Name="CostText" FontSize="16" Text="" Margin="0,0,0,20"/>

            <Button Content="Добавить сыр" Click="AddCheese" Margin="5"/>
            <Button Content="Добавить мясо" Click="AddMeat" Margin="5"/>
            <Button Content="Добавить овощи" Click="AddVegetables" Margin="5"/>
            <Button Content="Добавить соус" Click="AddSauce" Margin="5"/>
            <Button Content="Сбросить заказ" Click="ResetOrder" Margin="5" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
